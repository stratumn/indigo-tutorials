{
  "name": "todo",
  "author": "Stephan Florquin",
  "description": "TODO tutorial series.",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "init": "stratumn-cli run tm:init && git init && git add .",
    "init:linux": "stratumn-cli run tm:init && stratumn-cli run tm:post-init:linux && stratumn-cli run monitoring:post-init:linux && git init && git add .",
    "monitoring:post-init:linux": "./arch/linux/fix-monitoring-files-ownership.sh",
    "tm:init": "docker run -it --rm -v \"$(pwd)/tendermint:/tendermint\" tendermint/tendermint:0.16.0 init",
    "tm:post-init:linux": "docker run -it --rm -v \"$(pwd)/tendermint:/tendermint\" -v \"$(pwd)/arch/linux/fix-tendermint-files-ownership.sh:/tmp/fix-tendermint-files-ownership.sh\" -e \"UID=$(id -u)\" -e \"GID=$(id -g)\" --entrypoint=/tmp/fix-tendermint-files-ownership.sh tendermint/tendermint:0.16.0 init",
    "tm:init:test": "docker run -it --rm -v \"$(pwd)/tendermint.test:/tendermint\" tendermint/tendermint:0.16.0 init",
    "tm:post-init:test:linux": "docker run -it --rm -v \"$(pwd)/tendermint.test:/tendermint\" -v \"$(pwd)/arch/linux/fix-tendermint-files-ownership.sh:/tmp/fix-tendermint-files-ownership.sh\" -e \"UID=$(id -u)\" -e \"GID=$(id -g)\" --entrypoint=/tmp/fix-tendermint-files-ownership.sh tendermint/tendermint:0.16.0 init",
    "compose": "docker-compose -p test-dev -f docker-compose.yml -f docker-compose.dev.yml",
    "compose:test": "docker-compose -p test-test -f docker-compose.yml -f docker-compose.test.yml",
    "build": "stratumn-cli run compose build",
    "build:test": "stratumn-cli run compose:test build",
    "up": "stratumn-cli run build && stratumn-cli run compose up",
    "down": "stratumn-cli run compose down",
    "down:test": "stratumn-cli run compose:test down; rm -rf tendermint.test",
    "down:test:linux": "stratumn-cli run compose:test down; stratumn-cli run tm:post-init:test:linux; rm -rf tendermint.test",
    "test": "stratumn-cli run build:test && stratumn-cli run tm:init:test && stratumn-cli run compose:test run agent npm test",
    "pull": "stratumn-cli run compose pull",
    "push": "stratumn-cli run compose push"
  }
}
